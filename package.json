{
  "name": "idol",
  "version": "1.0.0",
  "description": "**idol is a minimalistic, language-agnostic, transport agnostic, IDL**",
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "regenerator-runtime": "^0.13.3"
  },
  "scripts": {
    "clean": "rm -f ./idol_js.js",
    "es6-compile": "babel --source-type module src/es6 -d src/lib",
    "add-runtime": "cp ./src/lib/idol/idol_js.js . && cat ./node_modules/regenerator-runtime/runtime.js ./idol_js.js > ./src/lib/idol/idol_js.js",
    "chmod": "chmod +x ./src/lib/idol/idol_js.js",
    "compile": "npm run clean && npm run es6-compile && npm run add-runtime && npm run chmod"
  }
}
